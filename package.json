{
  "name": "everest-forms",
  "title": "Everest Forms",
  "version": "1.7.0",
  "homepage": "https://github.com/wpeverest/everest-forms/",
  "repository": {
    "type": "git",
    "url": "https://github.com/wpeverest/everest-forms.git"
  },
  "license": "GPL-3.0+",
  "main": "Gruntfile.js",
  "scripts": {
    "build": "grunt && npm run makepot && cross-env BABEL_ENV=default NODE_ENV=production webpack",
    "watch": "cross-env BABEL_ENV=default webpack --watch",
    "lint:js": "eslint assets/js --ext=js",
    "makepot": "composer run-script makepot",
    "git:update-hooks": "node ./node_modules/husky/husky.js install"
  },
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@wordpress/babel-preset-default": "4.16.0",
    "@wordpress/browserslist-config": "2.7.0",
    "autoprefixer": "9.8.4",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "cross-env": "7.0.2",
    "eslint": "7.4.0",
    "grunt": "1.2.0",
    "grunt-contrib-compress": "1.6.0",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-cssmin": "3.0.0",
    "grunt-contrib-jshint": "2.1.0",
    "grunt-contrib-uglify": "4.0.1",
    "grunt-contrib-watch": "1.1.0",
    "grunt-phpcs": "0.4.0",
    "grunt-postcss": "0.9.0",
    "grunt-rtlcss": "2.0.2",
    "grunt-sass": "3.1.0",
    "grunt-stylelint": "0.15.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "node-sass": "4.14.1",
    "stylelint": "13.6.1",
    "stylelint-config-wordpress": "17.0.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "engines": {
    "node": ">=8.9.3",
    "npm": ">=5.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "./bin/post-merge.sh"
    }
  },
  "lint-staged": {
    "*.php": [
      "php -d display_errors=1 -l",
      "composer run-script phpcs-pre-commit"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ],
    "!(*.min).js": [
      "eslint --fix",
      "git add"
    ]
  }
}
